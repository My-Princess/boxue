.clearfix:after,
.clearfix:before {
  content: '';
  display: table;
}
.clearfix:after {
  clear: both;
}
.activeColor {
  color: #db1f13 !important;
}
.community-concent-item {
  padding: 30rpx 40rpx;
}
.community-concent-item-img {
  position: relative;
  width: 99%;
  height: 300rpx;
  margin-top: 15px;
  margin-bottom: 10px;
}
.community-concent-item-img ._div {
  width: 0;
  height: 0;
}
.community-concent-item-img ._img {
  max-height: 100%;
  max-width: 100%;
  width: auto !important;
  height: auto !important;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  opacity: 1;
}
.community-c-isFocus {
  width: 130rpx;
  height: 46rpx;
  background: #ff4a3e;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: #ffeeee;
  font-size: 24rpx;
  border-radius: 10px;
}
.btnactive {
  background: #ffffff !important;
  border: 1rpx solid #adadad;
  color: #adadad !important;
}

