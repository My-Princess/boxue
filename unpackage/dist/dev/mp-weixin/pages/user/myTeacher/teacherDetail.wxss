  padding: 0 40rpx;
  padding-bottom: 50rpx;
}
.teacherDetail-box-info image {
  margin: 0 auto;
  border-radius: 50%;
  display: block;
  width: 120rpx;
  height: 120rpx;
}
.teacherDetail-box-info-name {
  padding-top: 30rpx;
  padding-bottom: 24rpx;
  text-align: center;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #ffffff;
}
.teacherDetail-box-info-txt {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #eeeeee;
