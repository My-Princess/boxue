.teacherDetail-item-l {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.teacherDetail-item-r {
  width: 132rpx;
  height: 52rpx;
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #fc725c), color-stop(100%, #de2518));
