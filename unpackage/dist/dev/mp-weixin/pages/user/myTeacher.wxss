.clearfix:after,
.clearfix:before {
  content: '';
  display: table;
}
.clearfix:after {
  clear: both;
}
.activeColor {
  color: #db1f13 !important;
}
.blank {
  font-size: 28rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.myteacher-c {
  padding: 0 40rpx;
}
.myteacher-c-item:nth-child(1) {
  padding-top: 0;
}
.myteacher-c-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #EEEEEE;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.myteacher-c-item image {
  display: block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.myteacher-c-item-c {
  margin-left: 20rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.myteacher-c-item-c-name {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}
.myteacher-c-item-c-txt {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.myteacher-c-item-btn {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

