.clearfix:after,
.clearfix:before {
  content: '';
  display: table;
}
.clearfix:after {
  clear: both;
}
.activeColor {
  color: #db1f13 !important;
}
.everyday-list {
  padding: 40rpx 30rpx;
  box-shadow: 0 0 4px 1px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
}
.everyday-list-pay {
  margin-top: 30rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 800;
  color: #333333;
}
.everyday-list-item:nth-child(1) {
  padding-top: 0;
}
.everyday-list-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx 0;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.everyday-list-item1 {
  padding: 20rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.everyday-list-item1-name {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.everyday-list-item1-txt {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #db1f13;
}
.everyday-list-line {
  width: 100%;
  height: 1rpx;
  background: #eeeeee;
}
.everyday-list-pay {
  padding-top: 20rpx;
  text-align: right;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 800;
  color: #333333;
}
.everyday-body {
  padding: 0 40rpx;
}
.everyday-name {
  font-size: 35rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.everyday-c {
  padding: 30rpx 0 40rpx;
  padding-left: 6rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.everyday-title {
  padding: 34rpx 0 80rpx;
}
.everyday-title image {
  display: block;
  width: 78rpx;
  height: 84rpx;
  position: relative;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.everyday-title-name {
  padding-top: 30rpx;
  text-align: center;
  font-size: 35rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

