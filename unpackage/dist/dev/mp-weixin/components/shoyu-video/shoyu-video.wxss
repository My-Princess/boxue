
.video {
	width: 100%;
	height: 420rpx !important;
}
.video-control {
	background-color: rgba(0, 0, 0, 0.5);
	height: 70rpx;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	z-index: 997;
}
.icon-zuojiantou {
	/* line-height: 70rpx; */
	position: absolute;
	top: 8rpx;
	left: 0rpx;
	font-size: 50rpx;
	padding-left: 6rpx;
	color: #ffffff;
	z-index: 998;
}
.video-title {
	/* line-height: 70rpx;
	 */

	display: -webkit-box;

	display: -webkit-flex;

	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	color: #ffffff;
	font-size: 24rpx;
}
.video-nmae {
	padding-left: 10rpx;
	width: 70%;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.video-wrap {
	position: relative;
}
.multi-list.full-screen.vertical {
	height: 100vh !important;
	padding: 8vh 0;
}
.multi-list.full-screen.horizontal {
	height: 100vw !important;
	padding: 8vw 0;
}
.distinct {
	position: absolute;
	right: 200rpx;
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	color: #fff;
}
.multi {
	position: absolute;
	right: 30rpx;
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	z-index: 998;
	width: 100rpx;
	/* height: 60rpx; */
	border: 1rpx solid #ffffff;
	border-radius: 20px;
	font-size: 24rpx;
	color: #fff;
	padding: 4rpx 0;
	text-align: center;
	-webkit-transition: color ease 0.3s;
	transition: color ease 0.3s;
}
.multi.rate {
	right: 20rpx;
}
.multi-list {
	position: absolute;
	height: 100%;
	width: 0;
	background-color: rgba(0, 0, 0, 0.8);
	top: 0rpx;
	right: 20rpx;
	-webkit-transition: width 0.3s ease;
	transition: width 0.3s ease;
	z-index: 999;
	box-sizing: border-box;
	padding: 50rpx 0;
}
.distinct-list {
	position: absolute;
	height: 70%;
	width: 0;
	background-color: rgba(0, 0, 0, 0.8);
	top: 0rpx;
	right: 180rpx;
	-webkit-transition: width 0.3s ease;
	transition: width 0.3s ease;
	z-index: 999;
	box-sizing: border-box;
	padding: 50rpx 0;
}
.multi-list.rate {
	padding: 25rpx 0;
}
.multi-list.active {
	width: 120rpx;
}
.dactive {
	width: 100rpx;
}
.multi-item {
	text-align: center;
	color: #fff;
	line-height: 80rpx;
	-webkit-transition: color ease 0.3s;
	transition: color ease 0.3s;
}
.distinct-list-item {
	text-align: center;
	color: #fff;
	line-height: 80rpx;
	-webkit-transition: color ease 0.3s;
	transition: color ease 0.3s;
}
.distinct-list-item.rate {
	line-height: 70rpx;
}
.multi-item.rate {
	line-height: 70rpx;
}
.multi-item:hover,
.multi:hover {
	color: #00d8ff;
}
.multi-item.active {
	color: #00d8ff;
}
.distinct-list-item.active {
	color: #00d8ff;
}

