.clearfix:after,
.clearfix:before {
  content: '';
  display: table;
}
.clearfix:after {
  clear: both;
}
.activeColor {
  color: #db1f13 !important;
}
.expenditure {
  color: #db1f13 !important;
}
.expenditureColor {
  background: #db1f13 !important;
}
.myWallet-body {
  padding: 0 40rpx;
}
.myWallet-body-item:nth-child(1) {
  margin-top: 30rpx;
}
.myWallet-body-item {
  margin-top: 40rpx;
}
.myWallet-body-item-time {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.myWallet-body-item-child-item {
  margin-top: 20rpx;
  border-radius: 10px;
  padding: 30rpx;
  background: #ffffff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.myWallet-body-item-child-item-l {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.myWallet-body-item-child-item-r {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.myWallet-body-item-child-item-r text:nth-child(1) {
  display: block;
  width: 10rpx;
  height: 10rpx;
  background: #5fce00;
  border-radius: 50%;
}
.myWallet-body-item-child-item-r text:nth-child(2) {
  color: #5fce00;
  margin-left: 8rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
}

