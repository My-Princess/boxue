.clearfix:after,
.clearfix:before {
  content: '';
  display: table;
}
.clearfix:after {
  clear: both;
}
.activeColor {
  color: #db1f13 !important;
}
.group-box {
  padding: 0 40rpx;
  margin-bottom: 30rpx;
}
.group-box-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.group-box-item-left {
  width: 230rpx;
  height: 180rpx;
  margin-right: 24rpx;
}
.group-box-item-left image {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}
.group-box-item-right-title {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  width: 295rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 800;
  color: #333333;
}
.group-box-item-right-text {
  width: 322rpx;
  max-height: 40rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.group-box-item-right-bottom {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
          align-items: flex-end;
  padding-top: 26rpx;
}
.group-box-item-right-bottom-r {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #db1f13;
}

