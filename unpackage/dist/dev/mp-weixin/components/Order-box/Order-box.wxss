.clearfix:after,
.clearfix:before {
  content: '';
  display: table;
}
.clearfix:after {
  clear: both;
}
.activeColor {
  color: #db1f13 !important;
}
.myorder-list-item {
  margin: 40rpx 40rpx 0;
  padding: 30rpx 18rpx 30rpx 30rpx;
  box-shadow: 0 0 4px 1px rgba(0, 0, 0, 0.1);
  background: #ffffff;
  border-radius: 10px;
}
.myorder-list-item-name {
  padding-bottom: 20rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.myorder-list-item-c {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eeeeee;
}
.myorder-list-item-c-img {
  padding-right: 20rpx;
  width: 250rpx;
  height: 180rpx;
}
.myorder-list-item-c-img image {
  display: block;
  width: 100%;
  height: 100%;
  background: #ffffff;
  border-radius: 10px;
}
.myorder-list-item-c-r {
  width: 350rpx;
}
.myorder-list-item-c-r-name {
  padding-top: 6rpx;
  padding-bottom: 14rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 800;
  color: #333333;
}
.myorder-list-item-c-r-txt {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.myorder-list-item-c-r-time {
  padding-top: 20rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.myorder-list-item-footer {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.myorder-list-item-footer-l {
  margin-top: 18rpx;
  width: 132rpx;
  height: 52rpx;
  background: url(https://boxue-resource.oss-cn-shenzhen.aliyuncs.com/tie/annei.png);
  background-size: 132rpx 52rpx;
  color: #ffffff;
  font-size: 28rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.myorder-list-item-footer-r {
  padding-top: 30rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: right;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 800;
  color: #333333;
}

