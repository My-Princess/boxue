.clearfix:after,
.clearfix:before {
  content: '';
  display: table;
}
.clearfix:after {
  clear: both;
}
.activeColor {
  color: #db1f13 !important;
}
.user-box-user {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.user-box-user image {
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60px;
}
.user-box-user-r {
  margin-left: 30rpx;
  font-family: PingFang SC;
}
.user-box-user-r-name {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  width: 500rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.user-box-user-r-txt {
  width: 348rpx;
  font-size: 26rpx;
  font-weight: 500;
}
.user-box-user-r-medal {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 16rpx;
}
.user-box-user-r-medal-item {
  margin-right: 18rpx;
  width: 42rpx;
  height: 40rpx;
}
.user-box-user-r-medal-item image {
  width: 100%;
  height: 100%;
}

